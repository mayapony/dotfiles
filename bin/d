#!/bin/sh

# auto chose package manager & rename current window name
if [ -z "$TMUX" ]; then
	echo 'Not in tmux'
else
	tmux rename-window 'ðŸ¤–'
fi

if [ -f yarn.lock ]; then
	echo 'yarn dev'
	yarn dev
	exit 0
fi

if [ -f pnpm-lock.yaml ]; then
	echo 'pnpm run dev'
	pnpm run dev
	exit 0
fi

if [ -f package-lock.json ]; then
	echo 'npm run dev'
	npm run dev
	exit 0
fi

BASE_NAME="$(basename "$(pwd)")"

cd ..
if [ -f pnpm-lock.yaml ]; then
	cd "$BASE_NAME" || exit
	pnpm run dev
	exit 0
fi

PARENT_BASE_NAME="$(basename "$(pwd)")"

cd ..
if [ -f pnpm-lock.yaml ]; then
	cd "$PARENT_BASE_NAME" || exit
	cd "$BASE_NAME" || exit
	pnpm run dev
	exit 0
fi

echo ' Node package not detected'
