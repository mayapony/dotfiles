#!/bin/bash
# 功能：自动识别系统类型，安装通用包和系统专属包

COMMON_PACKAGES=(
    git
		gcc
		make
    zsh
    neovim
    tmux
    fzf
    ripgrep
    jq
    zoxide
    fd
    yazi
		tmux
		git-delta
)
# paru -S resvg

# Arch Linux
ARCH_PACKAGES=(
    7zip
    imagemagick
    poppler
    ffmpeg
)

# macOS
MACOS_PACKAGES=(
    skhd
    yabai
    sevenzip
    resvg 
    font-symbols-only-nerd-font
)

# -------------------------------------------------------------------
# 安装逻辑（无需修改）
# -------------------------------------------------------------------

# 获取系统类型（小写）
SYSTEM=$(uname -s | tr '[:upper:]' '[:lower:]')

echo "=== 检测到系统类型: $SYSTEM ==="

# 安装通用包
echo ">> 安装通用包: ${COMMON_PACKAGES[*]}"
case "$SYSTEM" in
    linux)
        sudo pacman -S --needed --noconfirm "${COMMON_PACKAGES[@]}"
        ;;
    darwin)
				echo "skip"
				;;
    *)
        echo "错误：不支持的系统类型: $SYSTEM"
        exit 1
        ;;
esac

# 安装系统独占包
if [[ "$SYSTEM" == "linux" ]]; then
    echo ">> 安装 Arch Linux 独占包: ${ARCH_PACKAGES[*]}"
    sudo pacman -S --needed --noconfirm "${ARCH_PACKAGES[@]}"
elif [[ "$SYSTEM" == "darwin" ]]; then
    echo ">> 安装 macOS 独占包: ${MACOS_PACKAGES[*]}"
		echo "skip"
fi

# 清理缓存
echo ">> 清理缓存..."
case "$SYSTEM" in
    linux) sudo pacman -Scc --noconfirm ;;
    darwin) echo "skip"
esac

echo "=== 安装完成 ==="
